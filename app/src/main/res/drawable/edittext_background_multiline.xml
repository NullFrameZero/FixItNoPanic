<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние: поле в фокусе (нажато) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#2D2D2D" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#4CAF50" /> <!-- Зелёная рамка при фокусе -->
        </shape>
    </item>

    <!-- Состояние: поле не в фокусе -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2D2D2D" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#444444" /> <!-- Серая рамка -->
        </shape>
    </item>
</selector>